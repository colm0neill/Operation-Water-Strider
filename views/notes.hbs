<div class="row two notesTwo">
    <div class="column twoA notesView">

        <h1>Notes.</h1>
        
            <div id="note">
                <div id="toolbar">
                    
                </div>

                <!-- Create the editor container -->
                <div id="editor">
                    
                </div>
            </div>

            <button class="btn btn-primary" type="submit" id="create">Create PDF</button>
            <a href='/' class="btn btn-secondary">Cancel</a>
            <pre id="myPrecious"></pre>

    </div>
    <div class="column twoC notesAtt">
        <h3 id="tools">Tools</h3>

        <div id="timerContainer">
            <div class="form-group-timer">
                <label class="timerLabel">Set Timer</label>
                <select id="timeSegment" style="display:initial;">
                    <option value="15">15:00</option>
                    <option value="30">30:00</option>
                    <option value="45">45:00</option>
                    <option value="60">60:00</option>
                </select>
                <span id="timeDigits" style="display:none;">00:00</span>

                <input type='button' onclick="startTimer()" class='startTimer btn btn-success' value="Start"
                    style="display:initial;" />
                <input type='button' onclick="pauseTimer()" class='pauseTimer btn btn-warning' value="Pause"
                    style="display:none;" />
                <input type="button" onclick="stopTimer()" class="stopTimer btn btn-danger" value="Stop" />

            </div>
        </div>

    </div>

    <div class="row three notesThree">
        <div class="column threeA">

        </div>

        <div class="column threeB">

        </div>


        <div class="column threeC">

        </div>

    </div>
</div>